extends layouts/main-layout.pug

block content 
    main 
        if prods.length>0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__tile  
                        .card-image 
                            img(src="https://media.wnyc.org/i/800/0/c/85/photologue/photos/the-girl-with-the-dragon-tattoo.jpg",alt="A book")
                        .card_content
                            h2.product-price $13.45
                            p.product__description Interesting book #{product.title}
                        .card__actions
                            button.btn Add to Cart 
        
        else 
            h1 No Products